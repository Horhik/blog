
<section class="grid grid-cols-3 gap-5 mx-auto mt-12 lg:max-w-none">
  {% set postslist = collections.post %}
  {% for post in postslist | reverse %}

  <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
    <div class="flex-shrink-0">
      <img class="object-cover w-full h-48" src="{{ post.data.image }}" alt="">
    </div>
    <div class="flex flex-col justify-between flex-1 p-6 bg-white">
      <div class="flex-1">
        <p class="text-sm font-medium text-indigo-600">
          <a href="#" class="hover:underline">
            Article
          </a>
        </p>
        <a href="{{ post.url | url }}" class="block mt-2">
          <p class="text-xl font-semibold text-gray-900 hover:underline">
            {% if post.data.title %}
                {{ post.data.title }}
            {% else %}
                Untitled
            {% endif %}
          </p>
          <p class="mt-3 text-base text-gray-500">
            {{ post.data.description }}
          </p>
        </a>
      </div>
    </div>
  </div>


